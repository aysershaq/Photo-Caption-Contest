{
  "name": "photo-caption-contest",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development  nodemon --watch server.js  --watch routes/ --watch models/ --watch middlewares/ --watch imageCache.js --watch controllers/ --watch migrations/ ",
    "start": "cross-env NODE_ENV=production  node server.js",
    "migrate": "sequelize-cli db:migrate --env production",
    "build:css": "node -e \"require('fs').mkdirSync('frontend/public',{recursive:true})\" && npx @tailwindcss/cli -i ./frontend/src/input.css -o ./frontend/public/output.css --minify",
    "dev:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/output.css --watch"
  },
  "author": "",
  "license": "ISC",
  "description": "**Photo Caption Contest** is a Back-End application built with **Node.js, Express, Sequelize, and PostgreSQL**.  \r It allows users to participate in a photo caption competition where they can submit captions and vote for the best ones, with a secure role-based authorization system suitable for production environments.",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "sequelize-cli": "^6.6.5"
  },
  "keywords": []
}
